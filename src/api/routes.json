{
  "app": {
    "info": "appInfo"
  },

  "authentication": {
    "profile": "me",
    "forgetPassword": {
      "method": "post",
      "url": "forget-password"
    },
    "resetPassword": {
      "method": "post",
      "url": "reset-password"
    },
    "oauth": {
      "login": {
        "url": {
          "base": "/",
          "path": "oauth2/login/:provider"
        }
      }
    }
  },

  "roles": {
    "index": "roles",
    "save": {
      "method": "POST",
      "url": "roles/syncRoles"
    }
  },

  "currencies": {
    "index": "currencies",
    "update": {
      "method": "POST",
      "url": "currencies/update/:id"
    },
    "updateRate": {
      "method": "POST",
      "url": "currencies/update/:id/rate"
    }
  },

  "transactions": {
    "index": "transactions",
    "create": {
      "method": "POST",
      "url": "transactions"
    },
    "update": {
      "method": "POST",
      "url": "transactions/:id/update"
    },
    "delete": {
      "method": "POST",
      "url": "transactions/:id/delete"
    }
  },

  "accounts": {
    "index": "accounts",
    "types": "accounts/account-types",
    "create": {
      "method": "POST",
      "url": "accounts"
    },
    "update": {
      "method": "POST",
      "url": "accounts/:id/update"
    },
    "delete": {
      "method": "POST",
      "url": "accounts/:id/delete"
    },
    "pin": {
      "method": "POST",
      "url": "accounts/:id/pin"
    }
  },

  "categories": {
    "index": "categories",
    "create": {
      "method": "POST",
      "url": "categories"
    },
    "update": {
      "method": "POST",
      "url": "categories/:id/update"
    },
    "delete": {
      "method": "POST",
      "url": "categories/:id/delete"
    }
  },

  "tags": {
    "index": "tags",
    "create": {
      "method": "POST",
      "url": "tags"
    },
    "update": {
      "method": "POST",
      "url": "tags/:id/update"
    },
    "delete": {
      "method": "POST",
      "url": "tags/:id/delete"
    }
  },

  "settings": {
    "get": "settings",
    "save": {
      "method": "POST",
      "url": "settings/save"
    },
    "deploy": {
      "method": "POST",
      "url": "deploy"
    }
  }
}
